		"ava": "^1.3.1",
		"concurrently": "^4.1.0",
		"electron": "^4.1.0",
		"nyc": "^13.3.0",
		"rimraf": "^2.6.3",
		"typescript": "^3.3.3333",
		"webpack": "^4.29.6"
	},
	"peerDependencies": {
		"@phylum/pipeline": "^4.0.0-beta.15",
		"webpack": "^4.0.0"
	},
